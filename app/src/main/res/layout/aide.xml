<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffff"
	android:orientation="vertical">
    <Button
		android:id="@+id/aimg"
		android:background="@drawable/az"
		android:layout_centerInParent="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView
		android:text="@string/aide1"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView
		android:text="@string/aide2"
		android:gravity="center"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView
		android:text="@string/aide3"
		android:gravity="center"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent" />
	<TextView
		android:text="@string/aide4"
		android:gravity="center"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent" />
	<TextView
		android:id="@+id/atxt"
		android:text="@string/aide5"
		android:layout_centerInParent="true"
		android:layout_below="@id/aimg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView
		android:text="@string/aide6"
		android:layout_centerInParent="true"
		android:layout_below="@id/atxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:textColor="#F3BA00" />
</RelativeLayout>
